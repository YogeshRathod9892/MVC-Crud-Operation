@model MVCCrudOperation.Models.ProductModel
@{
    ViewBag.Title = "AddProduct";
}

<h2>AddProduct</h2>
<form method="post">
    <div>
        <span>Product Name :</span>
        <input type="text" name="Product_Name" required placeholder="Product Name"/>
    </div>
    @*<div>
        <span>category Name</span>
        <input type="text" value="" name="Category_Name"/>
    </div>*@
    <div style="display:-webkit-inline-box">
        <span>category Name :</span>
        <select class="form-control" id="Category_Id" name="Category_Id">

            @for (int i = 0; i <@Model.dtcateg.Rows.Count; i++)
            {
                <option value="@Model.dtcateg.Rows[i][0]">@Model.dtcateg.Rows[i][1]</option>
            }
        </select>
    </div>
    <div style="display:flex">
        <button type="submit" class="btn btn-success">Save</button>&nbsp;
        <a href="@Url.Action("Index","Product")" class="btn btn-primary pull-right">Back</a>
    </div>

</form>

